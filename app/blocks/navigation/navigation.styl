.navigation
  background grayColor
  bottom 0
  left 0
  position fixed
  right 0
  top 0
  z-index 100
  display none
  width 100%
  overflow-y scroll
  padding-top 100px
  align-items baseline
  @media only screen and (min-width: navigationBreakPoint)
    overflow-y visible
    position static
    background none
    display flex
    padding-top 0
    justify-content center
    align-items center