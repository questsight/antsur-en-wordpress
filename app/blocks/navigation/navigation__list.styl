.navigation__list
  list-style-type none
  display flex
  width 100%
  justify-content center
  flex-direction column
  @media only screen and (min-width: navigationBreakPoint)
    display flex
    justify-content space-around
    flex-direction row
  & > li
    position relative
    text-align center
    cursor pointer
    @media only screen and (min-width: navigationBreakPoint)
      display inline-block
      &:hover ul
        display block
    & > a
      color lightColor
      display inline-block
      transition-duration 0.35s
      text-decoration none
      padding 12px 0
      &:hover
        color pinkColor
        text-decoration none
        font-family titleFont
    & > ul
      background pinkColor
      min-width calc(100% + 60px)
      margin 0 0 0 -30px
      z-index 10
      color lightColor
      font-size 16px
      list-style-type none
      padding 9px 9px 12px
      display none
      box-shadow 0 0 5px darkOverlay
      @media only screen and (min-width: navigationBreakPoint)
        position absolute
      & > li
        position relative
        margin  5px 0
        & > a
          color themeColor
          transition-duration 0.35s
          text-decoration none
          &:hover
            color themeColor
            font-family titleFont
            text-decoration none