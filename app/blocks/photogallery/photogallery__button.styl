  position absolute
  top -10px
  right -10px
  background themeColor
  color lightColor
  border-radius 50%
  width 30px
  height 30px
  padding 2px
  cursor pointer
  z-index 1
  font-weight: 900;
  font-size: 30px;
  line-height: 1;
